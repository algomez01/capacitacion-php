{% extends 'base.html.twig' %}

{% block title %}Libros{% endblock %}

{% block body %}
    <a href="{{ path('app_libros_index') }}" button type="button" class="btn btn-primary">Regresar a la lista de libros</a>
    

    <h1>Libros</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ libro.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ libro.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ libro.descripcion }}</td>
            </tr>
            <tr>
                <th>Año de publicación</th>
                <td>{{ libro.anioPublicacion }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ libro.autor }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_libros_edit', {'id': libro.id}) }}">Editar</a>

    {{ include('libros/_delete_form.html.twig') }}
{% endblock %}
